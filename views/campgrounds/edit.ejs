<% layout('layouts/boilerplate') %> 
<h1>Edit Campground</h1>
<form method="POST" action="/campgrounds/<%=campground._id%>?_method=PUT">
    <div>
        <label for="title">Title</label>
        <input type="text" id="title" placeholder="Campground Name" name="campground[title]" value="<%= campground.title%> ">
    </div>
    <div>
        <label for="location">Location</label>
        <input type="text" id="location" placeholder="Campground Location" name="campground[location]" value="<%= campground.location%> ">
    </div>
    <button>Edit Campground</button>
</form>
<footer>
    <a href="/campgrounds/<%= campground._id %> ">Back to Campground</a>
</footer>
